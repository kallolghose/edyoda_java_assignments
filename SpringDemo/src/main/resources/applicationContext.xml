<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:sport.properties" />

    <bean id="myFortune" class="com.edyoda.myapp.service.HappyFortuneServiceImpl"
    init-method=""></bean>

    <bean id="myCoach" class="com.edyoda.myapp.mycomponents.BaseballCoach" scope="singleton">
        <constructor-arg ref="myFortune"/>
        <property name="email" value="${baseballcoach.email}"/>
        <property name="team" value="${baseballcoach.team}"/>
    </bean>

</beans>